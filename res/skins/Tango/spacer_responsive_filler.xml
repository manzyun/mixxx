<!--
Description:
  An expanding filler that appears only if more than XY pixels are available
Variables:
  Size  : Size/SizePolicy for the whole container
  Color : Abbreviated hex color code for the filler, see style.qss
-->
<Template>
  <SizeAwareStack>
    <Size><Variable name="Size"/></Size>
    <Children>
      <WidgetGroup>
        <MinimumSize>0,0</MinimumSize>
        <MaximumSize>15,-1</MaximumSize>
      </WidgetGroup>
      <WidgetGroup>
        <ObjectName>RoundFiller<Variable name="Color"/></ObjectName>
        <MinimumSize>16,-1</MinimumSize>
      </WidgetGroup>
    </Children>
  </SizeAwareStack>
</Template>
